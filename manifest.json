{
  "manifest_version": 3,
  "name": "Reveal: Safe Chat Trainer",
  "short_name": "Reveal",
  "description": "Interactive educational tool to help learners and tutors recognize and respond to online grooming tactics using simulations, AI-driven analysis, and trusted resources.",
  "version": "0.1.1",
  "action": {
    "default_title": "Reveal",
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "<all_urls>",
    "http://127.0.0.1/*",
    "https://api.emailjs.com/*"
  ],
  "icons": {
    "16": "assets/icon16.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "commands": {
    "analyze-selection": {
      "suggested_key": {
        "default": "Ctrl+Shift+Y"
      },
      "description": "Analyze highlighted text for grooming risk"
    }
  }
}

